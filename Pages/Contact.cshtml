@page
@model ContactModel
@{
    ViewData["Title"] = "Contact Me";
}

<h1>@ViewData["Title"]</h1>

<p>Hello, please fill out the below information and hit send to get in contact with me.</p>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label" asp-for="ContactEmail.PersonEmail">Personal Email</label>
                <input asp-for="ContactEmail.PersonEmail" class="form-control" type="email" />
                <span asp-validation-for="ContactEmail.PersonEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ContactEmail.EmailSubject">Email Subject</label>
                <input asp-for="ContactEmail.EmailSubject" class="form-control" type="text" />
                <span asp-validation-for="ContactEmail.EmailSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ContactEmail.EmailMessage">Email Message</label>

                <textarea asp-for="ContactEmail.EmailMessage" class="form-control" text-wrap:normal" type="text"></textarea>
                <span asp-validation-for="ContactEmail.EmailMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>            
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        @Model.SubmitStatus
    </div>
</div>

<div>
    <a asp-page="Index">Back to Home</a>
</div>
